{% extends 'JSAdminBundle:Default:index.html.twig' %}
{% block header %}
    <h1>Список элементов слайдера</h1>
{% endblock %}
{% block list %}
    <table class="table table-bordered table-striped">
        <tr>
            <th>Картинка</th>
            <th>Имя</th>
            <th>URL</th>
            <th></th>
        </tr>

        {% for item in all %}
            <tr>
                <td><img style="width: 300px;" src="{{ asset(public~item.image) }}" /></td>
                <td>{{ item.name }}</td>
                <td>{{ item.url }}</td>
                <td>
                    <a onclick="return confirm('Вы действительно хотите удалить запись?')" class="btn btn-mini" href="{{ url('admin_carusel_delete', {'pk' : item.id}) }}"><i class="icon-remove"></i> Удалить</a>
                    <a class="btn btn-mini" href="{{ url('admin_carusel_edit', {'pk' : item.id}) }}"><i class="icon-pencil"></i> Редактировать</a>
                </td>

            </tr>
        {% endfor %}

    </table>
{% endblock %}
